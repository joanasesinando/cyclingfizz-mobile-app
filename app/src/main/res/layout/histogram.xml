<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:gravity="center_vertical"
    android:paddingHorizontal="18dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/histogram_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/material_on_surface_emphasis_medium"
            android:fontFamily="@font/quicksand_medium"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/histogram_star1"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_round_star_24"
                app:tint="@color/material_on_surface_disabled" />

            <ImageView
                android:id="@+id/histogram_star2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_round_star_24"
                app:tint="@color/material_on_surface_disabled" />

            <ImageView
                android:id="@+id/histogram_star3"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_round_star_24"
                app:tint="@color/material_on_surface_disabled" />

            <ImageView
                android:id="@+id/histogram_star4"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_round_star_24"
                app:tint="@color/material_on_surface_disabled" />

            <ImageView
                android:id="@+id/histogram_star5"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_round_star_24"
                app:tint="@color/material_on_surface_disabled" />
        </LinearLayout>

        <TextView
            android:id="@+id/histogram_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_available"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/material_on_surface_disabled"
            android:textSize="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical=".5dp">

            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="5"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:textSize="10sp"
                android:layout_marginEnd="6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/bar"
                    android:backgroundTint="#E6E6E6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/histogram_bar5"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_weight="0"
                        android:background="@drawable/bar"
                        android:backgroundTint="@color/success"
                        android:orientation="horizontal" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical=".5dp">

            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="4"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:textSize="10sp"
                android:layout_marginEnd="6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/bar"
                    android:backgroundTint="#E6E6E6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/histogram_bar4"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_weight="0"
                        android:background="@drawable/bar"
                        android:backgroundTint="@color/success"
                        android:orientation="horizontal" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical=".5dp">

            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="3"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:textSize="10sp"
                android:layout_marginEnd="6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/bar"
                    android:backgroundTint="#E6E6E6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/histogram_bar3"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_weight="0"
                        android:background="@drawable/bar"
                        android:backgroundTint="@color/warning"
                        android:orientation="horizontal" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical=".5dp">

            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="2"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:textSize="10sp"
                android:layout_marginEnd="6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/bar"
                    android:backgroundTint="#E6E6E6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/histogram_bar2"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_weight="0"
                        android:background="@drawable/bar"
                        android:backgroundTint="@color/pink"
                        android:orientation="horizontal" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical=".5dp">

            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="1"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:textSize="10sp"
                android:layout_marginEnd="6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/bar"
                    android:backgroundTint="#E6E6E6"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/histogram_bar1"
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_weight="0"
                        android:background="@drawable/bar"
                        android:backgroundTint="@color/pink"
                        android:orientation="horizontal" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>