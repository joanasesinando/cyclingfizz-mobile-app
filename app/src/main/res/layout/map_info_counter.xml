<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/map_info_counter_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_help_outline_24"
        app:tint="@color/material_on_surface_disabled"
        android:layout_marginTop="1dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/map_info_counter_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="19min"
            android:textColor="@color/material_on_surface_emphasis_medium"
            android:textSize="14sp"
            android:layout_marginStart="6dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/map_info_counter_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="1.5km"
            android:textColor="@color/material_on_surface_emphasis_medium"
            android:textSize="11sp"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

</LinearLayout>